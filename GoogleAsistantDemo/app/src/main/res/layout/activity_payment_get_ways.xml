<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PaymentGetWays">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnupi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPI" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnStrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strip" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRaxorPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REZOR PAY" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGoolgePay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Google Pay" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPaytm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paytm" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPaypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PayPal" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnInAppPurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In App Purchase" />
            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>