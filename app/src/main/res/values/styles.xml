<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>

        <item name="materialCardViewStyle">@style/Widget.MyApp.MaterialCardView</item>

    </style>

    <style name="Widget.MyApp.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MyApp.MaterialCardView
        </item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.MaterialCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="splash_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/ic_splash_bg</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.MaterialCardView.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_4sdp</item>
        <item name="cornerSizeTopRight">@dimen/_4sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_4sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_4sdp</item>
    </style>

    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:textColor">@color/chip_text_selecation</item>
        <item name="android:fontFamily">@fonts/Montserrat-SemiBold.ttf</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>
    <style name="MyDialogTheme_1" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>

    </style>
</resources>
