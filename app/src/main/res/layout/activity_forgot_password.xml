<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".forgottPassword.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/img_back_forgot"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:src="@drawable/ic_action_tab_backarrow_white" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/half_conrner_bg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.addedfooddelivery_user._common.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30ssp"
                android:gravity="center"
                android:text="@string/forgot_password"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_18ssp"
                app:font_name="montserratBold" />

            <com.addedfooddelivery_user._common.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5ssp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:gravity="center"
                android:text="@string/please_enter_your_email_address_you_will_receive_a_link_to_create_a_new_password_via_email"
                android:textColor="@color/text_gray_1"
                android:textSize="@dimen/_10ssp"
                app:font_name="montserratMedium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_25ssp"
                android:layout_marginEnd="@dimen/_15ssp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <com.addedfooddelivery_user._common.views.CustomEditText
                    android:id="@+id/edForgotEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_10ssp"
                    android:background="@drawable/et_bg"
                    android:drawableStart="@drawable/ic_form_emailorange"
                    android:drawablePadding="@dimen/_10sdp"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/text_gray"
                    app:font_name="montserratMedium" />

            </com.google.android.material.card.MaterialCardView>

            <com.addedfooddelivery_user._common.views.CustomButton
                android:id="@+id/btSend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_5sdp"
                app:elevation="@dimen/_2sdp"
                app:font_name="montserratSemiBold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>