<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".verificationPhone.VerifyPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/img_back_verify"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:src="@drawable/ic_action_tab_backarrow_white" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/half_conrner_bg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.addedfooddelivery_user.common.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30ssp"
                android:gravity="center"
                android:text="@string/verify_your_phone_number"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_18ssp"
                app:font_name="montserratBold" />

            <com.addedfooddelivery_user.common.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5ssp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:gravity="center"
                android:text="@string/we_have_sent_you_an_sms_with_code_to_the_nuber_above"
                android:textColor="@color/text_gray_1"
                android:textSize="@dimen/_12ssp"
                app:font_name="montserratSemiBold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15ssp"
                android:layout_marginTop="@dimen/_25ssp"
                android:layout_marginEnd="@dimen/_15ssp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_country"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imfFlag"
                            android:visibility="gone"
                            android:layout_marginStart="@dimen/_8ssp"
                            android:layout_width="@dimen/_25ssp"
                            android:layout_height="match_parent" />

                        <com.addedfooddelivery_user.common.views.CustomTextView
                            android:id="@+id/txtContryCode"
                            android:layout_width="@dimen/_30ssp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5ssp"
                            android:layout_marginEnd="@dimen/_5ssp"
                            android:gravity="center_vertical|center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray" />

                    <com.addedfooddelivery_user.common.views.CustomEditText
                        android:id="@+id/edPhone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_8ssp"
                        android:layout_marginEnd="@dimen/_2ssp"
                        android:background="@drawable/et_bg"

                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="@string/phone_number"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/text_gray"
                        app:font_name="montserratMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.addedfooddelivery_user.common.views.CustomButton
                android:id="@+id/btNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/next"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_5sdp"
                app:elevation="@dimen/_2sdp"
                app:font_name="montserratSemiBold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>