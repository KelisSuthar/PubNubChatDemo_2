<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingStart="@dimen/_8sdp"
    android:paddingEnd="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.addedfooddelivery_user._common.views.CustomTextView
            android:id="@+id/txtItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Items"
            android:textColor="@color/white"
            android:textSize="@dimen/_7ssp"
            app:font_name="montserratREGULAR" />

        <com.addedfooddelivery_user._common.views.CustomTextView
            android:id="@+id/txtItemTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dummy_prise"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:font_name="montserratSemiBold" />

        <com.addedfooddelivery_user._common.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plus_taxes"
            android:textColor="@color/white"
            android:textSize="@dimen/_7ssp"
            app:font_name="montserratREGULAR" />
    </LinearLayout>

    <com.addedfooddelivery_user._common.views.CustomTextView
        android:id="@+id/txtViewCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:drawableEnd="@drawable/ic_circlerightarrow_white"
        android:drawablePadding="@dimen/_5sdp"
        android:gravity="center|top"
        android:text="@string/view_cart"

        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:font_name="montserratSemiBold" />
</RelativeLayout>