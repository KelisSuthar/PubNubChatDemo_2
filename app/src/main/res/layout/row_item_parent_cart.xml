<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_7sdp">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/imgRestCart"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_13sdp"
            android:src="@drawable/food09"
            app:siShape="@drawable/dialog_bg"
            app:siSquare="true" />

        <com.addedfooddelivery_user._common.views.CustomTextView
            android:id="@+id/txtResNameCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_toEndOf="@+id/imgRestCart"
            android:text="@string/dummy_restau_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:font_name="montserratSemiBold" />

        <com.addedfooddelivery_user._common.views.CustomTextView
            android:id="@+id/txtRestAddressCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtResNameCart"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toEndOf="@+id/imgRestCart"
            android:text="@string/dummy_add"
            android:textColor="@color/text_gray_1"
            android:textSize="@dimen/_8ssp"
            app:font_name="montserratSemiBold" />
    </RelativeLayout>
    <View
        android:id="@+id/view_parent"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"/>
</LinearLayout>