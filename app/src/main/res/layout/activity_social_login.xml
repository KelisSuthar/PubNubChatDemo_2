<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_bg"
    android:orientation="vertical"
    tools:context=".login.SocialLoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15ssp"
            android:paddingEnd="@dimen/_15ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.addedfooddelivery_user._common.views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/let_s_get_started"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14ssp"
                    app:font_name="montserratSemiBold" />

                <com.addedfooddelivery_user._common.views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5ssp"
                    android:text="@string/order_your_food_from_the_best_restaurants_near_your_area_location"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10ssp"
                    app:font_name="montserratMedium" />

                <LinearLayout
                    android:id="@+id/ll_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:background="@drawable/fb_rectangle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6ssp"
                        android:layout_marginTop="@dimen/_6ssp"
                        android:layout_marginBottom="@dimen/_6ssp"
                        android:layout_marginEnd="@dimen/_6ssp"
                        android:src="@drawable/ic_ic_facebookwhite" />

                    <View
                        android:layout_width="@dimen/_1ssp"
                        android:layout_height="match_parent"
                        android:background="#324C81" />

                    <com.addedfooddelivery_user._common.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:layout_marginEnd="@dimen/_5ssp"
                        android:layout_marginBottom="@dimen/_8ssp"
                        android:text="@string/continue_with_facebook"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10ssp"
                        app:font_name="montserratMedium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@drawable/tw_rectangle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6ssp"
                        android:layout_marginEnd="@dimen/_6ssp"
                        android:layout_marginTop="@dimen/_6ssp"
                        android:layout_marginBottom="@dimen/_6ssp"
                        android:src="@drawable/ic_ic_twitterwhite" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="#1989CE" />

                    <com.addedfooddelivery_user._common.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:layout_marginEnd="@dimen/_5ssp"
                        android:layout_marginBottom="@dimen/_8ssp"
                        android:text="@string/continue_with_twitter"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10ssp"
                        app:font_name="montserratMedium" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:background="@drawable/email_rectangle"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6ssp"
                        android:layout_marginEnd="@dimen/_6ssp"
                        android:layout_marginTop="@dimen/_6ssp"
                        android:layout_marginBottom="@dimen/_6ssp"
                        android:src="@drawable/ic_ic_personalemailwhite" />

                    <View
                        android:layout_width="@dimen/_1ssp"
                        android:layout_height="match_parent"
                        android:background="#BA5D09" />

                    <com.addedfooddelivery_user._common.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8ssp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:layout_marginEnd="@dimen/_5ssp"
                        android:layout_marginBottom="@dimen/_8ssp"
                        android:text="@string/continue_with_personal_email"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_10ssp"
                        app:font_name="montserratMedium" />
                </LinearLayout>

                <com.addedfooddelivery_user._common.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_13ssp"
                    android:text="@string/i_ll_log_in_letter"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_13ssp"
                    app:font_name="montserratREGULAR" />

                <com.addedfooddelivery_user._common.views.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15ssp"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_2ssp"
                    android:text="@string/by_logging_in_you_agree_to_added_terms_of_services_privacy_policy"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_8ssp"
                    app:font_name="montserratMedium" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>