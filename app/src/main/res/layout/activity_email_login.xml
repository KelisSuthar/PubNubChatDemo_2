<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_email_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_half_circle">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp">

            <ImageView
                android:id="@+id/img_login_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_login_bg" />

            <ImageView
                android:id="@+id/img_back_login"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10ssp"
                android:layout_marginTop="@dimen/_10ssp"
                android:src="@drawable/ic_action_tab_backarrow_white" />
        </FrameLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-10dp"
            android:layout_weight="1"
            android:background="@drawable/half_conrner_bg"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <!--login screen-->
                <LinearLayout
                    android:id="@+id/llLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <com.addedfooddelivery_user._common.views.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="@string/welcome_back"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_18ssp"
                            app:font_name="montserratBold" />

                        <com.addedfooddelivery_user._common.views.CustomTextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_1ssp"
                            android:text="@string/login_to_your_account"
                            android:textColor="@color/text_gray_1"
                            android:textSize="@dimen/_10ssp"
                            app:font_name="montserratMedium" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_18ssp"
                        android:layout_marginEnd="@dimen/_15ssp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp">

                        <com.addedfooddelivery_user._common.views.CustomEditText
                            android:id="@+id/edEmail"
                            style="@style/custome_et"
                            android:drawableStart="@drawable/ic_form_emailorange"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            app:font_name="montserratMedium" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_15ssp"
                        android:layout_marginEnd="@dimen/_15ssp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp">

                        <com.addedfooddelivery_user._common.views.CustomEditText
                            android:id="@+id/edPassword"
                            style="@style/custome_et"
                            android:drawableStart="@drawable/ic_form_passwordorange"
                            android:hint="@string/password"
                            android:imeOptions="actionDone"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            app:font_name="montserratMedium" />
                    </com.google.android.material.card.MaterialCardView>


                    <com.addedfooddelivery_user._common.views.CustomButton
                        android:id="@+id/btLogin"
                        style="@style/custome_bt"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="@string/login"
                        app:cornerRadius="@dimen/_5sdp"
                        app:elevation="@dimen/_2sdp"
                        app:font_name="montserratSemiBold" />


                    <com.addedfooddelivery_user._common.views.CustomTextView
                        android:id="@+id/tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/forgot_password"
                        android:textColor="@color/text_gray_1"
                        android:textSize="@dimen/_10ssp"
                        app:font_name="montserratSemiBold" />


                    <com.addedfooddelivery_user._common.views.CustomTextView
                        android:id="@+id/txtSignup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_50ssp"
                        android:text="@string/don_t_have_an_account_create_now"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_9ssp"
                        app:font_name="montserratMedium" />


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>