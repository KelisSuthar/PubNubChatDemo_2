<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/materialCardHome"
    android:layout_width="@dimen/_110sdp"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_2sdp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialCardView.Small">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearEventImages"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/bg_rounded_top_only"
                android:orientation="vertical">

                <com.github.siyamed.shapeimageview.RoundedImageView
                    android:id="@+id/imgRestLike"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food01"
                    app:siBorderColor="@color/colorTransparent"
                    app:siRadius="@dimen/_4sdp"
                    app:siShape="@integer/config_navAnimTime"
                    app:siSquare="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearEventImages"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="0dp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_2sdp">

                <com.addedfooddelivery_user._common.views.CustomTextView
                    android:id="@+id/txtRestNameLike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:gravity="start|center_vertical"
                    android:text="@string/rest_name_demo"
                    android:textColor="@color/colorBlack1"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    app:font_name="montserratREGULAR" />

                <RelativeLayout
                    android:id="@+id/linearEventDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.addedfooddelivery_user._common.views.CustomTextView
                        android:id="@+id/txtPriseLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/demo_prise"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_7ssp"
                        app:font_name="montserratSemiBold" />

                    <com.addedfooddelivery_user._common.views.CustomTextView
                        android:id="@+id/btnAdd"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/add_rectangle"
                        android:gravity="center"

                        android:text="@string/add"
                        android:textColor="@color/text_gray_1"
                        android:textSize="@dimen/_6ssp"
                        app:font_name="montserratSemiBold" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

