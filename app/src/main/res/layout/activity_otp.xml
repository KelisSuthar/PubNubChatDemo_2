<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".verificationPhone.VerifyPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/half_conrner_bg"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <com.addedfooddelivery_user.common.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30ssp"
                android:gravity="center"
                android:text="@string/phone_verification"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_18ssp"
                app:font_name="montserratBold" />

            <com.addedfooddelivery_user.common.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5ssp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:gravity="center"
                android:text="@string/enter_your_otp_code_here"
                android:textColor="@color/text_gray_1"
                android:textSize="@dimen/_12ssp"
                app:font_name="montserratSemiBold" />

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:otp_box_background="@drawable/otp_bg"
                android:textColor="@color/black"
                app:bar_active_color="@color/white"
                app:bar_inactive_color="@color/white"
                app:bar_enabled="true"
                app:bar_height="@dimen/_2sdp"
                app:length="4"
                app:otp_text_size="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_15ssp"
                app:height="@dimen/_45sdp"
                app:width="@dimen/_50sdp" />

            <com.addedfooddelivery_user.common.views.CustomButton
                android:id="@+id/btDone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/done"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:cornerRadius="@dimen/_5sdp"
                app:elevation="@dimen/_2sdp"
                app:font_name="montserratSemiBold" />

            <com.addedfooddelivery_user.common.views.CustomTextView
                android:id="@+id/txtResendOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_20ssp"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginEnd="@dimen/_20ssp"
                android:layout_marginBottom="@dimen/_20ssp"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_3ssp"
                android:text="@string/bottom_verification"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_8ssp"
                app:font_name="montserratSemiBold" />

            <com.addedfooddelivery_user.common.views.CustomTextView
                android:id="@+id/txtChangeNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5ssp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:gravity="center"
                android:text="@string/change_phone_number"
                android:textColor="@color/text_gray_1"
                android:textSize="@dimen/_12ssp"
                app:font_name="montserratSemiBold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>