<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/_5ssp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp">

            <ImageView
                android:id="@+id/img_back_chat"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_tab_backarrow_white" />


            <com.addedfooddelivery_user._common.views.CustomTextView
                android:id="@+id/txtChatUname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/demo_uname"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                app:font_name="montserratSemiBold" />

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/imgChatUser"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/person02"
                app:siBorderColor="@color/colorTransparent"
                app:siRadius="@dimen/_10sdp"
                app:siShape="@integer/config_navAnimTime"
                app:siSquare="false" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


</LinearLayout>