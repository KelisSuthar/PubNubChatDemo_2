<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/imgReview"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/person02" />

        <com.addedfooddelivery_user.common.views.CustomTextView
            android:id="@+id/txtReviewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_toEndOf="@+id/imgReview"
            android:text="@string/dummy_name"
            android:layout_marginEnd="@dimen/_75sdp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:font_name="montserratSemiBold" />

        <com.addedfooddelivery_user.common.views.CustomTextView
            android:id="@+id/review_desc"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtReviewName"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toEndOf="@+id/imgReview"
            android:text="@string/dummy_desc"
            android:textAllCaps="false"
            android:textColor="@color/text_gray_1"
            android:textSize="@dimen/_8sdp"
            app:font_name="montserratSemiBold" />

        <!--<com.addedfooddelivery_user._common.views.CustomTextView
            android:id="@+id/txtCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/orange_call_rectangle"
            android:drawableStart="@drawable/ic_phone_call"
            android:drawablePadding="@dimen/_3sdp"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_2ssp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingBottom="@dimen/_2ssp"
            android:text="@string/call"
            android:textColor="@color/white"
            android:textSize="@dimen/_9ssp"
            app:font_name="montserratSemiBold" />-->

        <RatingBar
            android:id="@+id/userReviewRat"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5"
            android:stepSize="0.5"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_1sdp"
            android:theme="@style/RatingBar" />

    </RelativeLayout>

</LinearLayout>