<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_half_circle"
    android:paddingBottom="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_half_circle"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context=".home_deliverylist.DeliveryListActivity">


        <androidx.appcompat.widget.Toolbar

            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:contentInsetEnd="@dimen/_13sdp">

            <ImageView
                android:id="@+id/imgBackProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_tab_backarrow_white" />

            <com.addedfooddelivery_user.common.views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/my_profile"

                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                app:font_name="montserratSemiBold" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="@color/bg_half_circle"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llPhotoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:src="@drawable/person02"
                        app:siShape="@drawable/dialog_bg"
                        app:siSquare="true" />

                    <com.addedfooddelivery_user.common.views.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/edit_profile"
                        android:textAllCaps="true"
                        android:textColor="@color/text_gray_1"
                        android:textSize="@dimen/_7ssp"
                        app:font_name="montserratREGULAR" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:layout_marginEnd="@dimen/_15ssp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <com.addedfooddelivery_user.common.views.CustomEditText
                        android:id="@+id/etProUserName"
                        style="@style/custome_et"
                        android:drawableStart="@drawable/ic_form_userorange"
                        android:hint="@string/user_name"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        app:font_name="montserratMedium" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_15ssp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <com.addedfooddelivery_user.common.views.CustomEditText
                        android:id="@+id/edProSignupEmail"
                        style="@style/custome_et"
                        android:drawableStart="@drawable/ic_form_emailorange"
                        android:hint="@string/email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        app:font_name="montserratMedium" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_15ssp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <com.addedfooddelivery_user.common.views.CustomEditText
                        android:id="@+id/etProPhone"
                        style="@style/custome_et"
                        android:drawableStart="@drawable/ic_call_orange"
                        android:hint="@string/phone_number"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLines="1"
                        app:font_name="montserratMedium" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_15ssp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <com.addedfooddelivery_user.common.views.CustomEditText
                        android:id="@+id/edProLocation"
                        style="@style/custome_et"
                        android:drawableStart="@drawable/ic_form_locationorange"
                        android:hint="@string/location"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        app:font_name="montserratMedium" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginStart="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginEnd="@dimen/_15ssp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp">

                    <com.addedfooddelivery_user.common.views.CustomEditText
                        android:id="@+id/edProComment"
                        style="@style/custome_et"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_chat_comment_oval_speech_bubble_with_text_lines_2"
                        android:drawablePadding="@dimen/_10sdp"
                        android:gravity="top"
                        android:hint="@string/tell_us_a_little_somthing_about_yourself_max_150_word"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:maxLines="4"

                        app:font_name="montserratMedium" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.addedfooddelivery_user.common.views.CustomButton
            android:id="@+id/btSaveChanges"
            style="@style/custome_bt"
            android:text="@string/save_changes"
            android:textStyle="bold"
            app:cornerRadius="@dimen/_5sdp"
            app:elevation="@dimen/_2sdp"
            app:font_name="montserratSemiBold" />
    </LinearLayout>

</RelativeLayout>