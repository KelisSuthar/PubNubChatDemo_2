<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_7sdp"
    android:background="@drawable/profile_unselect_bg"
    android:paddingBottom="@dimen/_7sdp">

    <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
        android:id="@+id/imgRestaurantTracking"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/food09"
        app:siShape="@drawable/dialog_bg"
        app:siSquare="true" />

    <com.addedfooddelivery_user._common.views.CustomTextView
        android:id="@+id/txtResNameTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_toEndOf="@+id/imgRestaurantTracking"
        android:text="@string/dummy_restau_name"
        android:textColor="@color/black"
        android:textSize="@dimen/_9ssp"
        app:font_name="montserratSemiBold" />

    <com.addedfooddelivery_user._common.views.CustomTextView
        android:id="@+id/txtItemNameTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtResNameTracking"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_toEndOf="@+id/imgRestaurantTracking"
        android:text="@string/dummy_item"
        android:textColor="@color/text_gray_1"
        android:textSize="@dimen/_8ssp"
        app:font_name="montserratSemiBold" />

    <com.addedfooddelivery_user._common.views.CustomTextView
        android:id="@+id/txtCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/green_call_rectangle"
        android:drawableStart="@drawable/ic_phone_call"
        android:drawablePadding="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:paddingStart="@dimen/_8sdp"
        android:paddingTop="@dimen/_2ssp"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingBottom="@dimen/_2ssp"
        android:text="@string/call"
        android:textColor="@color/white"
        android:textSize="@dimen/_9ssp"
        app:font_name="montserratSemiBold" />
</RelativeLayout>